-- Load Orion Library
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Create Window
local Window = OrionLib:MakeWindow({
    Name = "SEBB RIVALS GUI",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "SEBBRivals"
})

-- Tabs
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local EspTab = Window:MakeTab({
    Name = "ESP",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local InfoTab = Window:MakeTab({
    Name = "Info",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local SettingsTab = Window:MakeTab({
    Name = "Settings",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Info Tab
InfoTab:AddButton({
    Name = "Copy Discord Link",
    Callback = function()
        setclipboard("https://discord.gg/6emxrZBw6u")
        OrionLib:MakeNotification({
            Name = "Copied",
            Content = "Discord link copied to clipboard.",
            Image = "rbxassetid://4483345998",
            Time = 3
        })
    end
})

-- Aimbot Section
MainTab:AddSection({
    Name = "Aimbot"
})

MainTab:AddToggle({
    Name = "Aimbot",
    Default = false,
    Callback = function(state)
        aimbotEnabled = state
        if aimbotEnabled then
            aimAtTarget()
        end
    end
})

MainTab:AddDropdown({
    Name = "Aim Part",
    Default = "HumanoidRootPart",
    Options = { "Head", "HumanoidRootPart", "Torso" },
    Callback = function(selected)
        aimAtPart = selected
    end
})

MainTab:AddToggle({
    Name = "Wall Check",
    Default = false,
    Callback = function(state)
        wallCheckEnabled = state
    end
})

MainTab:AddKeybind({
    Name = "Aimbot Key",
    Default = Enum.KeyCode.Q,
    Hold = false,
    Callback = function()
        aimbotEnabled = not aimbotEnabled
        if aimbotEnabled then
            aimAtTarget()
        end
    end
})

-- ESP Section
EspTab:AddSection({
    Name = "ESP Settings"
})

EspTab:AddToggle({
    Name = "Enable ESP",
    Default = false,
    Callback = function(state)
        ESP.Enabled = state
    end
})

EspTab:AddToggle({
    Name = "Show Boxes",
    Default = false,
    Callback = function(state)
        ESP.ShowBox = state
    end
})

EspTab:AddToggle({
    Name = "Show Health",
    Default = false,
    Callback = function(state)
        ESP.ShowHealth = state
    end
})

EspTab:AddToggle({
    Name = "Show Names",
    Default = false,
    Callback = function(state)
        ESP.ShowName = state
    end
})

-- Crosshair Section
local CrosshairEnabled = false
SettingsTab:AddSection({
    Name = "Crosshair"
})

SettingsTab:AddToggle({
    Name = "Enable Crosshair",
    Default = false,
    Callback = function(state)
        CrosshairEnabled = state
    end
})

-- Finalize
OrionLib:Init()
